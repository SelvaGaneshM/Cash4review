<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cash4review">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CashApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.Splasscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.Login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".category.HomeScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".IntroScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".productReview.ProductsReviewScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".customCamera.TempActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".payment.Addcard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".productReview.PostReviewScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".payment.Success"
            android:screenOrientation="portrait" />
        <activity
            android:name=".wallet.WalletScreen"
            android:screenOrientation="portrait" />
    </application>

</manifest>